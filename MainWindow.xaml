<Window x:Class="Autoclicker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Autoclicker"
        mc:Ignorable="d"
        Title="AutoClicker" Height="450" Width="800" KeyDown="MainWindowKeyDown">
    <Grid>
        <TextBox x:Name="XPositionNumberBox" PreviewTextInput="previewNumbers" Width="35" Height="20" HorizontalAlignment="Left" Margin="10"></TextBox>
        <TextBox x:Name="YPositionNumberBox" PreviewTextInput="previewNumbers" Width="35" Height="20" HorizontalAlignment="Left" Margin="40"></TextBox>
        <TextBox x:Name="SecondsBox" PreviewTextInput="previewNumbers" Width="120" Height="120" HorizontalAlignment="Right" Margin="10"></TextBox>
        <Button x:Name="StartButton" Content="Hello" Width="100" Height="50" Click="DoEveryXSeconds"></Button>
    </Grid>
</Window>
